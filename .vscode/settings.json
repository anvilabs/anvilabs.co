{
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "editor.tabSize": 2,

  "eslint.autoFixOnSave": true,

  "files.autoSave": "off",

  "files.associations": {
    ".flowconfig": "ini",
    ".stylelintrc": "json",
    "*.js.flow": "javascript",
    "yarn.lock": "yaml"
  },

  "flow.useNPMPackagedFlow": true,

  "javascript.validate.enable": false,

  "scss.validate": false
}
